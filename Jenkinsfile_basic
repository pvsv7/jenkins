pipeline {
    agent any 
    // agent {
    //     node {
    //         label 'AGENT-1'
    //     }
    
    environment { 
        GREETING = 'Hello Jenkins'   //accessible accross all stages
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
    }
    parameters {
        string(name: 'PERSON', defaultValue: 'John', description: 'Who should I say hello to?')
        choice(name: 'ACTION', choices: ['APPLY', 'DESTROY'], description: 'select action')
    }
    // build
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            when {
                expression { params.ACTION == 'APPLY' }
            }
            steps {
                sh """
                    echo  "apply apply apply"
                    echo "$GREETING"
                """
            }
        }
        stage('check params'){
            steps{
                sh """
                    echo "Hello ${params.PERSON}"
                    echo "build no is: $BUILD_NUMBER"
                    def stage_variable = "accesible within stage"
                    echo htage_variable
                    
                """
            }
        }
        stage('Terraform') {
            steps {
                script {
                    echo 'Here I wrote shell script'

                    if (params.ACTION == "APPLY") {
                        sh 'echo "terraform apply"'
                    } else {
                        sh 'echo "terraform destroy"'
                    }
                }
            }
        }
    }
    // post build
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        failure { 
            echo 'this runs when pipeline is failed, used generally to send some alerts'
        }
        success{
            echo 'I will say Hello when pipeline is success'
        }
    }
}